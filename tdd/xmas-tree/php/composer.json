{
    "description": "Xmas Tree Kata",
    "type": "project",
    "license": "MIT",
    "keywords": ["php", "kata"],
    "require": {
        "php": ">=8.0"
    },
    "require-dev": {
        "symfony/var-dumper": "^5.4",
        "phpunit/phpunit": "^9.5",
        "vimeo/psalm": "^4.30"
    },
    "autoload": {
        "psr-4": {
            "Kata\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "KataTests\\": "tests/"
        }
    },
    "scripts": {
        "test": [
            "@psalm",
            "@test-unit"
        ],
        "test-unit": "./vendor/bin/phpunit",
        "test-coverage": "XDEBUG_MODE=coverage ./vendor/bin/phpunit --coverage-html coverage",
        "psalm": "./vendor/bin/psalm"
    },
    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    }
}
